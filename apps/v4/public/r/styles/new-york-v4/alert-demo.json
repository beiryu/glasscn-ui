  "files": [
    {
      "path": "registry/new-york-v4/examples/alert-demo.tsx",
      "content": "import { AlertCircleIcon, CheckCircle2Icon } from \"lucide-react\"\n\nimport {\n  Alert,\n  AlertDescription,\n  AlertTitle,\n} from \"@/registry/new-york-v4/ui/alert\"\n\nexport default function AlertDemo() {\n  return (\n    <div className=\"flex flex-col items-start flex-wrap content-start gap-6 w-full\">\n      <Alert variant=\"success\">\n        <CheckCircle2Icon />\n        <div className=\"flex-1 flex flex-col items-start\">\n          <AlertTitle>Changes have been saved</AlertTitle>\n        </div>\n      </Alert>\n      <Alert variant=\"destructive\">\n        <AlertCircleIcon />\n        <div className=\"flex-1 flex flex-col items-start gap-px\">\n          <AlertTitle>Please fill required fields</AlertTitle>\n          <AlertDescription>Some fields are missing or invalid.</AlertDescription>\n        </div>\n      </Alert>\n      <Alert variant=\"destructive\">\n        <AlertCircleIcon />\n        <div className=\"flex-1 flex flex-col items-start\">\n          <AlertTitle>Error! Could not connect</AlertTitle>\n        </div>\n      </Alert>\n      <Alert variant=\"default\">\n        <CheckCircle2Icon />\n        <div className=\"flex-1 flex flex-col items-start gap-px\">\n          <AlertTitle>Profile updated</AlertTitle>\n          <AlertDescription>Your settings have been updated successfully.</AlertDescription>\n        </div>\n      </Alert>\n    </div>\n  )\n}\n",
      "type": "registry:example"
    }
  ],
  "type": "registry:example"
}